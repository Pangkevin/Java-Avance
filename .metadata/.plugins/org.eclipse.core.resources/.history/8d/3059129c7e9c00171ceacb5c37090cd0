package Exo4;

public class Point {
	
	private int x;
	private int y;
	private static int cpt=0;
	
	
	public Point(int x, int y) {
		
		this.x = x;
		this.y = y;
		
		cpt++;
		
	}




	public int getY() {
		return y;
	}
	
	public int getX() {
		return x;
	}
	
	public static int getCpt() {
		return cpt;
	}
	
	
	public static void main(String[] args) {
		
		Point p = new Point(1,1);
		
		System.out.println(Point.cpt);
		System.out.println(Point.cpt);
		
		
		
	}
	
	
	

}
